/* Filter Style 1 */			
/* 	Author : GhozyLab, Inc.*/

.emg-filterone {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0);
    border: 2px solid #E6E6E6;
    border-radius: 5px;
    color: #A7A7A7;
    cursor: pointer;
    display: inline-block;
    font-family: "Open Sans",sans-serif;
    font-size: 12px;
    font-weight: 600;
    line-height: 30px;
    padding: 0 17px !important;
}

.emg-filterone.selected .emg-filter-checked, .emg-filterone:hover .emg-filter-checked {
    background: none repeat scroll 0 0 rgba(0, 0, 0, 0.1);
    color: #666;
    font-size: 9px;
    font-weight: 300;
    line-height: 9px;
    margin-left: 7px !important;
    padding: 1px 3px;
    vertical-align: middle;
}

.emg-filterone:hover, .emg-filterone.selected {
    background: none repeat scroll 0 0 rgba(255, 255, 255, 0.1);
    border-color: #CCC;
    box-shadow: 0 3px 5px 0 rgba(0, 0, 0, 0.13);
    color: #666;
}
